  <script>
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', function(e){
        const trg = document.querySelector(this.getAttribute('href'));
        if(trg){ e.preventDefault(); trg.scrollIntoView({behavior:'smooth', block:'start'}); }
      });
    });

    // Lightbox open/close
    function openLightbox(url){
      const lb = document.getElementById('lightbox');
      const img = document.getElementById('lbimg');
      img.src = url;
      lb.style.display = 'flex';
      lb.onclick = ()=>{ lb.style.display='none'; img.src=''; }
    }

    // Simple form handler (uses mailto fallback)
    function submitForm(e){
      e.preventDefault();
      const name = encodeURIComponent(document.getElementById('name').value.trim());
      const email = encodeURIComponent(document.getElementById('email').value.trim());
      const phone = encodeURIComponent(document.getElementById('phone').value.trim());
      const message = encodeURIComponent(document.getElementById('message').value.trim());

      // Create subject & body for mailto
      const subject = encodeURIComponent('Website contact from ' + (name || email));
      const body = encodeURIComponent(
        'Name: ' + name + '\\nEmail: ' + email + '\\nPhone: ' + phone + '\\n\\nMessage:\\n' + message
      );

      // open mail client
      window.location.href = 'mailto:mumeenpromoter@gmail.com?subject=' + subject + '&body=' + body;

      // Optionally show a quick UI feedback
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerText;
      submitBtn.innerText = 'Opening mailâ€¦';
      setTimeout(()=> submitBtn.innerText = originalText, 3000);
    }

    // Reveal animations on load
    window.addEventListener('load', ()=> {
      document.querySelectorAll('.fade-in').forEach((el,i)=>{
        el.style.animationDelay = (0.06 * i) + 's';
      });
    });
  </script>
